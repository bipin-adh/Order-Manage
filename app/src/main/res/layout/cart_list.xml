<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_cart_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_cart_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_cart_item_name"
            style="@style/AppTheme.TextAppearance.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:text="Chicken biryani"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_cart_costs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cart_item_name"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/cart_tv_cost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cost"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/cart_tv_cost_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rs 250" />

            <ImageView
                android:id="@+id/cart_iv_multiply"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_multiply" />

            <TextView
                android:id="@+id/cart_tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2" />

            <ImageView
                android:id="@+id/iv_cart_equals"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_equals" />

            <TextView
                android:id="@+id/cart_tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="500" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
