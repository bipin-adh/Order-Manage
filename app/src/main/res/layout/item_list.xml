<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/iv_item_logo"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/item_image_progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_name"
            style="@style/AppTheme.TextAppearance.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/rl_image"
            android:maxLines="2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/AppTheme.TextAppearance.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/rl_image"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_price"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_item_name"
            android:layout_toRightOf="@id/rl_image"
            android:src="@drawable/ic_price" />

        <ImageView
            android:id="@+id/iv_timer"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_price"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/rl_image"
            android:src="@drawable/ic_timer" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/AppTheme.TextAppearance.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_timer"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="10sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="0.5dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/tv_item_quantity"
            android:background="@color/gray_color_dark" />

        <TextView
            android:id="@+id/tv_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/ll_item_num"
            android:textColor="@color/gray_color_dark"
            android:textSize="24sp" />


        <LinearLayout
            android:id="@+id/ll_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_quantity_increase"
                android:layout_width="36dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/iv_quantity_decrease"
                android:layout_width="36dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/ripple"
                android:padding="8dp"
                android:src="@drawable/ic_minus" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
