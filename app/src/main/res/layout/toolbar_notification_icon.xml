<RelativeLayout
    android:id="@+id/rl_cart_notification"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cart_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:contentDescription="bell"
        android:gravity="center"
        android:padding="8dp"
        android:src="@drawable/ic_add_shopping_cart_white_24dp" />

    <TextView
        android:id="@+id/tv_cart_notify"
        style="@style/AppTheme.TextAppearance.Regular"
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_alignRight="@id/iv_cart_notify"
        android:layout_alignTop="@id/iv_cart_notify"
        android:background="@drawable/rounded_square"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />
</RelativeLayout>